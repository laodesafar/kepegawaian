  <script>
    $("#dataTable").on('click', '.button-update', function(){
      let id = $(this).data('id');
      let unit = $(this).data('unit');
      let tingkat = $(this).data('tingkat');
      $('#editModal').modal('show');
      $('.id').val(id);
      $('.unit').val(unit);
      $('.tingkat').val(tingkat);
    })

    $("#dataTable").on('click', '.button-hapus', function(){
    let id = $(this).data('id');
    let unit  = $(this).data('unit');
    let title = "Hapus Unit";
    let actionValue = `/admin/unit/${id}?_method=DELETE`;
    let detail = `Apakah anda yakin ingin menghapus ${unit} ?`;

    $('.action').attr("action",actionValue);
    $('.hapusDetail').text(detail);
    $('.modal-title').text(title);

  })

    </script>
