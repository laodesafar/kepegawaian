<script>
    $("#dataTable").on('click', '.button-update', function(){
      let id = $(this).data('id');
      let jenisPengabdi = $(this).data('jenispengabdi');
      let bagian = $(this).data('bagian');
      let jenis = $(this).data('jenis');
      $('#editModal').modal('show');
      $('.id').val(id);
      $('.jenisPengabdi').val(jenisPengabdi);
      if (jenis == true) {
      $('.true').attr("checked", "checked");
      } else {
        $('.false').attr("checked", "checked");
      }
      if (bagian == "Akademik") {
      $('.akademik').attr("checked", "checked");
      } else {
        $('.nonakademik').attr("checked", "checked");
      }
    })

    $("#dataTable").on('click', '.button-hapus', function(){
      let id = $(this).data('id');
      let jenispengabdi  = $(this).data('jenispengabdi');
      let title = "Hapus Jenis Pengabdi";
      let actionValue = `/admin/jenispengabdi/${id}?_method=DELETE`;
      let detail = `Apakah anda yakin ingin menghapus ${jenispengabdi} ?`;

      $('.action').attr("action",actionValue);
      $('.hapusDetail').text(detail);
      $('.modal-title').text(title);
     })
  </script>
