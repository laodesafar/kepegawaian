<script>

$('.fotoUrl').bind('change', function() {
//this.files[0].size gets the size of your file.
 if (this.files[0].size < 1097152) {
    this.setCustomValidity('');
    $('.fotoValid').hide();
 } else {
    this.setCustomValidity('File tidak boleh lebih dari 1 MB');
    $('.fotoValid').show();
    $('.fotoValid').text('File tidak boleh lebih dari 1 MB');
 }
});

</script>
